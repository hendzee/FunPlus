<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/mainContain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ff6b81"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textView2"
            android:text="0"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145dp"
            android:text="3 + 5"
            android:textColor="#fff"
            android:textSize="70sp"
            app:fontFamily="@font/baloo" />

        <ImageView
            android:id="@+id/bananaTimer1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textViewScore"
            app:srcCompat="@drawable/banana" />

        <ImageView
            android:id="@+id/bananaTimer4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textViewScore"
            android:layout_toEndOf="@+id/bananaTimer3"
            app:srcCompat="@drawable/banana"
            android:layout_toRightOf="@+id/bananaTimer3" />

        <ImageView
            android:id="@+id/bananaTimer3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textViewScore"
            android:layout_toEndOf="@+id/bananaTimer2"
            app:srcCompat="@drawable/banana"
            android:layout_toRightOf="@+id/bananaTimer2" />

        <ImageView
            android:id="@+id/bananaTimer2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textViewScore"
            android:layout_toEndOf="@+id/bananaTimer1"
            app:srcCompat="@drawable/banana"
            android:layout_toRightOf="@+id/bananaTimer1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textViewQuestion"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_backround"
                    android:onClick="selectAnswer"
                    android:src="@drawable/sandwich"
                    android:tag="0" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_backround"
                    android:onClick="selectAnswer"
                    android:src="@drawable/meat"
                    android:tag="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_backround"
                    android:onClick="selectAnswer"
                    android:src="@drawable/chocolate"
                    android:tag="2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_backround"
                    android:onClick="selectAnswer"
                    android:src="@drawable/cupcake"
                    android:tag="3" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="30sp"
            app:fontFamily="@font/baloo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewScore"
            android:layout_alignTop="@+id/textView1"
            android:text="Score"
            android:textColor="#fff"
            android:textSize="30sp"
            app:fontFamily="@font/baloo"
            android:layout_alignRight="@+id/textViewScore" />

    </RelativeLayout>
</RelativeLayout>